            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=",
            crossorigin="anonymous")
        script(src="js/parallax.min.js")
        script(src="js/jquery.fittext.js")
        script(src="js/script.js")